<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:padding="10dp"
            android:background="@color/colorPrimary"
            android:layout_centerVertical="true"
            tools:src="@tools:sample/avatars"/>

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_toRightOf="@id/imgIcon"
            android:layout_toEndOf="@id/imgIcon"
            android:layout_toLeftOf="@id/linear2"
            android:layout_toStartOf="@id/linear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Title example"
                tools:text="@tools:sample/full_names"/>

            <TextView
                android:id="@+id/txtDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Desc example"
                tools:text="@tools:sample/lorem"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:id="@+id/linear2"
            android:layout_toLeftOf="@id/linear3"
            android:layout_toStartOf="@id/linear3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/txtJual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="normal"
                android:text="Jual"/>

            <TextView
                android:id="@+id/txtBeli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="normal"
                android:text="Beli"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/linear3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/txtTotalJual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="0"/>

            <TextView
                android:id="@+id/txtTotalBeli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="0"/>

        </LinearLayout>

        <View
            android:layout_below="@id/imgIcon"
            android:layout_width="match_parent"
            android:background="#C7C7C7"
            android:layout_height="0.7dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>